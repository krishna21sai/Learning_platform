<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/home.css"> <!-- Include CSS file -->
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <button class="nav-button" onclick="location.href='/home'">Home</button>
        <button class="nav-button" onclick="location.href='/addcourse'">Add Course</button>
        <button class="nav-button" onclick="location.href='/updatecourse'">Update Course</button>
        <button class="nav-button" onclick="location.href='/deletecourse'">Delete Course</button>
        <button class="nav-button" onclick="location.href='/tutorials'">Tutorials</button>
    </nav>

    <!-- Profile Container with onClick -->
    <div class="profile-container" onclick="toggleProfileMenu()">
        <img src="/profile.jpg" alt="Profile" class="profile-img">
    </div>

    <!-- Profile Menu (Initially Hidden) -->
    <div id="profile-menu" class="profile-menu">
        <ul>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/settings">Settings</a></li>
            <li><a href="/password">Change Password</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>

    <h1>Welcome</h1>
    <div class="courses-container">
        <% users.forEach((user) => { %>
            <div class="course-card">
                <a href="/courseDetails/<%= user.courseName%>">
                    <img src="/course.png" alt="Course Image" class="course-img">
                </a>
                <div class="course-info">
                    <h2 class="course-title"><%= user.courseName %></h2>
                    <p class="course-description">Short description about the course or its topics.</p>
                </div>
            </div>
        <% }) %>
    </div>

    <script>
        function toggleProfileMenu() {
            const menu = document.getElementById('profile-menu');
            menu.style.display = (menu.style.display === 'block') ? 'none' : 'block';
        }

        window.addEventListener('click', function(event) {
            const menu = document.getElementById('profile-menu');
            const profileContainer = document.querySelector('.profile-container');
            
            if (!profileContainer.contains(event.target)) {
                menu.style.display = 'none';
            }
        });
    </script>
</body>
</html>
